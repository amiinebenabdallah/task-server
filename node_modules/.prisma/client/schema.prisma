generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  tasks    tasks[]
}

model tasks {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String
  due_date    DateTime
  priority    String
  user_id     Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  user        users    @relation(fields: [user_id], references: [id])
}
